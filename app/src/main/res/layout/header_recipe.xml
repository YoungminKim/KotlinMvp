<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/main_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <com.facebook.share.widget.LikeView
        android:id="@+id/like_view"
        android:layout_width="match_parent"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="@color/app_gray3"
        android:textSize="14dp"
        android:textStyle="normal" />





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/cook_time_ll"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="요리시간"
                        android:textColor="@color/app_gray3"
                        android:textSize="13dp"
                        android:textStyle="italic" />


                    <TextView
                        android:id="@+id/cook_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:text="25분"
                        android:textColor="@color/app_jingray"
                        android:textSize="13dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/amount_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="분량"
                        android:textColor="@color/app_gray3"
                        android:textSize="13dp"
                        android:textStyle="italic" />


                    <TextView
                        android:id="@+id/amount_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:text="25분"
                        android:textColor="@color/app_jingray"
                        android:textSize="13dp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/calorie_ll"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="칼로리"
                        android:textColor="@color/app_gray3"
                        android:textSize="13dp"
                        android:textStyle="italic" />


                    <TextView
                        android:id="@+id/calorie_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:text="25분"
                        android:textColor="@color/app_jingray"
                        android:textSize="13dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/video_bt"
                    android:layout_width="128dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/orange_stroke_box"
                    android:gravity="center"
                    android:text="비디오 레시피"
                    android:textColor="@color/app_orange"
                    android:textSize="15dp" />


                <Button
                    android:id="@+id/share_bt"
                    android:layout_width="128dp"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/gray2_stroke_box"
                    android:gravity="center"
                    android:text="레시피 공유하기"
                    android:textColor="@color/app_gray2"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="56dp"
            android:text="주요재료"
            android:textColor="@color/app_gray3"
            android:textSize="14dp"
            android:textStyle="italic" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/app_jingray" />


        <LinearLayout
            android:id="@+id/ingr_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ingr_iv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:text="잘잘이 보내드리는 재료"
                android:textColor="@color/app_jingray"
                android:textStyle="italic" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/add_ingr_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="16dp"
                android:text="준비해주실 재료"
                android:textColor="@color/app_jingray"
                android:textSize="14dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/add_ingr_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/app_gray3"
                android:textSize="13dp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tip_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="재료 팁"
                android:textColor="@color/app_gray3"
                android:textSize="14dp"
                android:textStyle="italic" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="32dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/app_jingray" />


            <android.support.v4.view.ViewPager
                android:id="@+id/tip_vp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingLeft="16dp"
                android:paddingRight="200dp" />


            <TextView
                android:id="@+id/subject_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:text="subject"
                android:textColor="@color/app_jingray"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:maxLines="5"
                android:text="content"
                android:textColor="@color/app_gray3" />

            <TextView
                android:id="@+id/more_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="더보기"
                android:textColor="#389e7a"
                android:textSize="12dp"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="56dp"
            android:text="요리하기"
            android:textColor="@color/app_gray3"
            android:textSize="14dp"
            android:textStyle="italic" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:background="@color/app_jingray" />
    </LinearLayout>
</LinearLayout>